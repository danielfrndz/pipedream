#!/usr/bin/env node

var program = require('commander')
  , browserbuild = require('../lib/browserbuild.js')
  , fs = require('fs');

// program

program
  .version(require('../package').version)
  .usage('[options] <file â€¦>')
  .option('-c, --config [config]', 'Path to configuration json', {})
  .option('-d, --debug', 'Includes visionmedia/debug for a dev build.')
  .parse(process.argv);

// validate

if (!program.args.length) {
  console.error('\n  Please supply files.\n');
  return;
}


if(program.config) {
    program.config = JSON.parse(fs.readFileSync(program.config, 'utf8'));
}
browserbuild(program.args, program.config)
  .render(function (err, txt) {
    console.log(txt);
  });